<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lnmiit.digifit" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DigiFit</name>
    <description>
        App development for Tracking your fitness...
    </description>
    <author email="15ume004@lnmiit.ac.in" href="http://www.lnmiit.ac.in">
        Abhimanyu Singh and Abhijeet Pareek
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res\icon\android\icon-96-xhdpi.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="res\icon\ios\icon-72-2x.png" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-pedometer" spec="https://github.com/leecrossley/cordova-plugin-pedometer.git" />
    <plugin name="cordova-plugin-device-motion" spec="^1.2.5" />
    <engine name="android" spec="^7.0.0" />
</widget>
