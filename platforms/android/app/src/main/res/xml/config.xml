<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lnmiit.digifit" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Pedometer">
        <param name="android-package" value="org.apache.cordova.pedometer.PedoListener" />
    </feature>
    <feature name="Accelerometer">
        <param name="android-package" value="org.apache.cordova.devicemotion.AccelListener" />
    </feature>
    <name>DigiFit</name>
    <description>
        App development for Tracking your fitness...
    </description>
    <author email="15ume004@lnmiit.ac.in" href="http://www.lnmiit.ac.in">
        Abhimanyu Singh and Abhijeet Pareek
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res\icon\android\icon-96-xhdpi.png" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
